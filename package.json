{
  "name": "@ui8kit/core",
  "version": "0.1.8",
  "description": "Open source React UI components library with Tailwind utility-first and semantic classes",
  "homepage": "https://buildy.tw/",
  "license": "GPL-3.0",
  "author": "buildy-ui",
  "type": "module",
  "keywords": [
    "components",
    "design",
    "frontend",
    "library",
    "tailwind",
    "utility-first",
    "semantic",
    "react",
    "ui",
    "ui8kit"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "scan": "bunx buildy-ui@latest scan",
    "build:r": "bunx buildy-ui@latest build",
    "publish": "cd packages/registry && npm version patch && npm publish",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:guard": "bun run test:coverage && node scripts/coverage-guard.mjs",
    "test:ui": "vitest --ui",
    "test:dev": "vite --config vite.test-dev.config.ts --host",
    "test:watch": "vitest --watch"
  },
  "sideEffects": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "url": "https://github.com/ui8kit/core.git",
    "type": "git"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "react-resizable-panels": "^3.0.6",
    "tailwind-merge": "^3.3.1"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.4",
    "@babel/traverse": "^7.28.4",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitest/coverage-v8": "1.6.1",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.19",
    "bun-types": "^1.1.29",
    "jsdom": "^24.1.0",
    "postcss": "^8.4.38",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.6.3",
    "vite": "^5.4.1",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
