{
  "extends": "../../tsconfig.json",
  "include": [
    "**/*",
    "../../src/**/*"
  ],
  "exclude": [
    "../../dist/**/*",
    "../../node_modules/**/*"
  ],
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "rootDir": ".",
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "baseUrl": "../",
    "paths": {
      "@/*": ["../src/*"],
      "@ui8kit/core": ["../src/index"],
      "@tests/*": ["./*"],
      "@tests": ["."]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  }
}
